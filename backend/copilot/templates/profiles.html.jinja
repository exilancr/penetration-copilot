{% extends "base.html.jinja" %}
{% block title %}{{title}}{% endblock %}
{% block header %}{% endblock %}
{% block content %}
<h1>{{ profile.name }}</h1>
<p>{{ profile.title }}</p>
{% for contact in profile.contacts %}
    <span class="pure-button button-small chip">{{ contact | contact }}</span>
{% endfor %}

<div class="pure-g">
    <div class="pure-u-lg-3-4">
        <h1>Summary</h1>
        <p>{{ profile.description }}</p>
        <h1>Experience</h1>
        {% for experience in profile.experiences %}
            <div>
                <b>{{ experience.position }}</b> at <b>{{ experience.company }}</b><br>
                {{ experience.start_date }} - {{ experience.end_date }}<br>

                {{ experience.description | markdown }}

                {% for technology in experience.technologies %}
                    <span class="pure-button button-xsmall chip">{{ technology }}</span>{{ technology }}
                {% endfor %}
            </div>
        {% endfor %}
        <h1>Education</h1>
        {% for education in profile.educations %}
            <div>
                <b>{{ education.school }}</b><br>
                {{ education.degree }},&nbsp;{{ education.start_date }}&nbsp;-&nbsp;{{ education.end_date }}
            </div>
        {% endfor %}

    </div>
    <div class="pure-u-lg-1-4 col">
        <div>
            <h1>Strengths</h1>
            {% for strength in profile.strengths %}
                <span class="pure-button button-xsmall chip">{{ strength }}</span>{{ strength }}
            {% endfor %}
        </div>
        <div>
            <h1>Skills</h1>
            {% for skill in profile.skills %}
                <span class="pure-button button-xsmall chip">{{ skill }}</span>{{ skill }}
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}